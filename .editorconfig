root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{ts,json,html,css,scss,sass}]
charset = utf-8
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[*.{yml}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
