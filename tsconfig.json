{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "./target/compile",
    "target": "es2016",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "downlevelIteration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "./source/typings",
      "node_modules/@types"
    ]
  },
  "include": [
    "source"
  ]
}
