{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "./build/compile",
    "target": "es5",
//    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "downlevelIteration": true,

     "strict": true,
//    "noImplicitReturns": true,
//    "noUnusedLocals": true,
//    "forceConsistentCasingInFileNames": true,
//    "noFallthroughCasesInSwitch": true,
//    "allowJs": true,

    "typeRoots" : ["./source/typings"]
  },
  "include": [
      "source"
  ]
}
